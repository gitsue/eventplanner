<% @title= "Profile" %>

<h1>Edit Your Profile</h1>
<a href="/events/">Events Dashboard</a>
<a href="/session/logout/">Logout</a>

<div id="namecard">
	<% if flash[:notice]%>
	<% flash[:notice]%>
	<% end %>
	<form action="/user/" method="post">
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		First Name: <input type="text" name="fname" value="<%= @user.fname %>">
		Last Name: <input type="text" name="lname" value="<%= @user.lname %>">
		Email: <input type="text" name="email" value="<%= @user.email %>">
		Location: <input type="text" name="location" value="<%= @user.location %>">
		State: <select name="state">
			<option value="<%= @user.state %>"><%= @user.state %></option>
			<option value="CA">CA</option>
		</select>
	<input type="submit" value="Update Records">
	</form>
</div>