<% @title= "Login-In" %>

<div class="row">
	<% if flash[:notice] %>
	<% flash[:notice] %>
	<% end %>
	<h3>Login</h3>
	<div class="col-md-4">
		
	</div>
	<div class="col-md-4">
		<form action="/login/" method="post">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<div class="form-group">
				<label for="sign_inemail">Email:</label>
			</div>
			<input type="text" name="email" id="sign_inemail">
			<div class="form-group">
				<label for="sign_inpw">Password:</label>
			</div>
			<input type="password" name="password" id="sign_inpw">
			<button type="submit" class="btn btn-default">Sign-In</button>
		</form>
	</div>
	<div class="col-md-4">
		
	</div>
</div>